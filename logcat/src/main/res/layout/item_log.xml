<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:orientation="horizontal">

	<TextView
		android:id="@+id/txt_log_level"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/offset_4dp"
		android:layout_marginLeft="@dimen/offset_4dp"
		android:textSize="@dimen/text_10sp"
		android:textStyle="bold"
		android:typeface="monospace"
		tools:text="D" />

	<TextView
		android:id="@+id/txt_log_text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingStart="@dimen/offset_16dp"
		android:paddingLeft="@dimen/offset_16dp"
		android:paddingEnd="@dimen/offset_8dp"
		android:paddingRight="@dimen/offset_8dp"
		android:textSize="@dimen/text_10sp"
		android:typeface="monospace"
		tools:text="Some log message" />
</FrameLayout>

